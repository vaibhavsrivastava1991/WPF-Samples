		<Button Content="Without Parent Child Relationship Popup" x:Name="one" Click="ShowModeless_Click" Margin="5" Grid.Row="2"/>
		<Button Content="With Parent Child Relationship Popup" x:Name="two" Click="ShowModeless_Click" Margin="5" Grid.Row="1"/>
	</Grid>
